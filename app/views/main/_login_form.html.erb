<div class="container">
  <p><strong>Please, log in to your account to use all the features of the site</strong></p> 
  
  
  <%= form_for(:user, :url => session_path(:user)) do |f| %>

  <div class="form-group">
    <%= f.label :email, "email:" %>
    <%= f.text_field :email, value: "foo@bar.com", class: "form-control" %>
    <small class="text-muted">You can use foo@bar.com as an example user</small>
  </div>


  <div class="form-group">
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password, value: "password", class: "form-control" %>
    <small class="text-muted">Use 'password' as password for example user</small>
  </div>

  <br />
  <%= f.submit 'Login', class:'btn btn-warning' %>

  <% end %>

</div>